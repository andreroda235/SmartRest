<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_name_textView"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Item Name"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_price_textView"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Item Price"
        android:layout_toRightOf="@+id/item_name_textView"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        />
    
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/item_quantity_add"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_smart_rest_add_foreground"
        android:backgroundTint="@color/colorPrimaryDark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_quantity_textView"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="0"
        android:layout_toLeftOf="@+id/item_quantity_add"
        android:layout_centerVertical="true"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/item_quantity_remove"
        android:background="@drawable/ic_smart_rest_subtract_foreground"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_toLeftOf="@+id/item_quantity_textView"
        />


</RelativeLayout>